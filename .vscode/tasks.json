{
  "version": "2.0.0",
  "options": {
    "cwd": "./build"
  },
  "windows": {
    "options": {
      "shell": {
        "executable": "C:\\Program Files\\Git\\bin\\bash.exe",
        "args": ["-c"]
      }
    }
  },
  "tasks": [
    {
      "label": "PXL-API :: Build .NET PXL.sln",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "command": "dotnet",
      "type": "process",
      "args": ["build", "../dotnet/Pxl.sln"],
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "PXL-API :: Publish Pxl.sln for local C# development",
      "type": "shell",
      "command": "./publish-pxl-sln-local.sh",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "PXL-API :: Start Simulator",
      "type": "shell",
      "command": "./start-simulator.sh",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
